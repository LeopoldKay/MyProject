@using System.Text.Encodings.Web;
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ShowMovies</title>
    <style>
        table {
            width: 500px; /* Ширина таблицы */
            border: 1px solid green; /* Рамка вокруг таблицы */
            margin: auto; /* Выравниваем таблицу по центру окна  */
        }

        td {
            /*width: 300px; /* Ширина таблицы */
            /*border: 1px solid green; /* Рамка вокруг таблицы */
            /*margin: auto; /* Выравниваем таблицу по центру окна  */
            text-align: center; /* Выравниваем текст по центру ячейки */
        }
    </style>
</head>
<body>
    <table><tr><td>Movies Table</td></tr> </table>
    <table>

        @foreach (var character in (ViewData["Movies"] as List<MyProject.Models.MovieSelect>))
        {
            <tr>
                <td>@character.Name</td>
                <td>@character.DirectorName @character.DirectorLastName</td>
                <td>@character.ActorName @character.ActorLastName</td>
            </tr>
        }

    </table>
    <table>
        <tr><td><a href="https://localhost:5001/home/Description">Previous Table</a></td><td><a href="https://localhost:5001/home/ShowActors">Next Table</a></td></tr>
    </table>

    <table><tr><td><a href="https://localhost:5001/">On Main Page</a></td></tr></table>
</body>
</html>
